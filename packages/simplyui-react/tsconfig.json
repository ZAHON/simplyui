{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./src",
    "composite": true,
    "lib": ["DOM", "ESNext", "DOM.Iterable"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react-jsxdev",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.test.tsx", "**/*.stories.tsx"]
}
